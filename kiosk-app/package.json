{
  "name": "kiosk-app",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "dev:external": "NODE_ENV=development KIOSK_USE_BUILT_IN_SERVER=false electron .",
    "start:external": "KIOSK_USE_BUILT_IN_SERVER=false electron .",
    "dist": "electron-builder --linux",
    "dist:publish": "electron-builder --linux --publish always"
  },
  "dependencies": {
    "dotenv": "^17.2.4",
    "electron-updater": "^6.3.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.kbnmouse.kiosk",
    "productName": "KBnMouse Kiosk",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "petesimard",
      "repo": "kbnmouse",
      "releaseType": "release"
    }
  }
}
